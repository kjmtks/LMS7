@inherits FileActivityComponentBase
@code
{
    [Parameter]
    public bool IsReadOnly { get; set; }
    [Parameter]
    public string Text { get; set; }

    public override Task<string> GetValueAsync()
    {
        return Task.Run<string>(() => Text);
    }
    public override Task SetValueAsync(string value)
    {
        return Task.Run(() => { Text = value; });
    }
    public override Task SetDefaultValueAsync()
    {
        return Task.Run(() =>
        {
            var file = File as ALMS.App.Models.Contents.ActivityFilesHidden;
            Text = file.Text;
        });
    }
    public override Task SetAnswerValueAsync()
    {
        return Task.Run(() =>
        {
            var file = File as ALMS.App.Models.Contents.ActivityFilesHidden;
            Text = file.Text;
        });
    }
}
